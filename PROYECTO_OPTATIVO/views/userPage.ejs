<head>
  <!-- Shared head -->
  <%- include('fragments/head') %>

    <!-- Custom -->
    <title>CheapBnB - User</title>
    <link type="text/css" rel="stylesheet" href="stylesheets/user.css">
</head>

<body>
  <!-- Navbar -->
  <%- include('fragments/navbar') %>

    <!-- Datos del usuario -->
    <div class="container-fluid p-0 mb-3">
      <section class="userBg">
        <div class="container py-5">
          <div class="row g-2">
            <div class="col-lg-4">
              <div class="card rounded h-100">
                <div class="card-body text-center">
                  <!-- TODO: Cambiar por imagen que sube usuario -->
                  <img src="images/avatar.png" alt="avatar" class="avatar rounded-circle img-fluid">
                  <h5 class="my-3">
                    <%= user.nombre %>
                  </h5>
                </div>
              </div>
            </div>
            <div class="col-lg-8">
              <div class="card h-100">
                <div class="card-body">
                  <form method="put" action="/updateUser">
                    <!-- Datos usuario -->
                    <!-- Nombre -->
                    <div class="row row-cols-1 row-cols-sm-2 align-items-center g-1">
                      <div class="col-sm-3">
                        <label for="nombreInput" class="form-label mb-0">Nombre</label>
                      </div>
                      <div class="col-sm-9">
                        <input type="text" id="nombreInput" class="form-control" value="<%= user.nombre %>" required>
                      </div>
                    </div>
                    <hr>
                    <!-- Correo -->
                    <div class="row row-cols-1 row-cols-sm-2 align-items-center g-1">
                      <div class="col-sm-3">
                        <label for="emailInput" class="form-label mb-0">Correo</label>
                      </div>
                      <div class="col-sm-9">
                        <input type="text" id="emailInput" class="form-control" value="<%= user.correo %>" required>
                      </div>
                    </div>
                    <hr>

                    <!-- Gestión contraseña -->
                    <div class="align-items-center">
                      <div class="row row-cols-1 row-cols-sm-2 g-1 mb-1">
                        <div class="col-sm-3">
                          <label for="currentPasswordInput" class="form-label mb-0">Contraseña Actual</label>
                        </div>
                        <div class="col-sm-9">
                          <input type="text" id="currentPasswordInput" class="form-control" placeholder="**********">
                        </div>
                      </div>
                      <div class="row row-cols-1 row-cols-sm-2 g-1 mb-1">
                        <div class="col-sm-3">
                          <label for="currentPasswordInput" class="form-label mb-0">Contraseña</label>
                        </div>
                        <div class="col-sm-9">
                          <input type="text" id="currentPasswordInput" class="form-control" placeholder="**********">
                        </div>
                      </div>
                      <div class="row row-cols-1 row-cols-sm-2 g-1 mb-1">
                        <div class="col-sm-3">
                          <label for="currentPasswordInput" class="form-label mb-0">Confirmación</label>
                        </div>
                        <div class="col-sm-9">
                          <input type="text" id="currentPasswordInput" class="form-control" placeholder="**********">
                        </div>
                      </div>
                    </div>
                    <hr>

                    <div class="row">
                      <div class="col text-end">
                        <button class="btn btn-primary" type="submit">Guardar</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    <!-- Reservas -->
    <div class="container mb-5">
      <div class="row justify-content-center">
        <h2 class="text-primary text-center"><strong>Tus reservas:</strong></h2>
      </div>
      <div id="reservas" class="row row-cols-1 row-cols-lg-2 g-3">
        <% reservas.forEach(function(reserva) { %>
          <%- include('fragments/reserva', {reserva}) %>
        <% }); %>
      </div>

    </div>

    <!-- Footer -->
    <%- include('fragments/footer') %>
</body>

</html>