                  <div class="row align-items-center">
                    <div class="col-sm-3">
                      <p class="mb-0">Confirmar Contraseña</p>
                    </div>
                    <div class="col-sm-9">
                      <input type="password" class="form-control rounded" placeholder="contraseña"></input>
                    </div>
                  </div>
