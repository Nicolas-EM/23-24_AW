<% if(!isAuthenticated) {%>
    <!-- Login Modal -->
    <div class="modal fade " id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Login</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="login" method="post" action="/login">
                    <div class="modal-body">
                        <input type="hidden" id="source" name="source" value="<%= source %>">
                        <div class="mb-3">
                            <label for="email" class="form-label">Correo</label>
                            <input type="email" class="form-control" id="email" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Contraseña</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="************" required>
                        </div>
                        <div class="mt-3 text-center">
                            <button type="submit" class="btn btn-primary form-control">Continuar</button>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <p>¿Todavía no te has registrado? <a href="#" data-bs-target="#signupModal" data-bs-toggle="modal">Haz clic aquí</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- sign up modal -->
    <div class="modal fade " id="signupModal" tabindex="-1" aria-labelledby="signupModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="signupModalLabel">Registro</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="signup" method="post" action="/register">
                    <div class="modal-body">
                        <input type="hidden" id="source" name="source" value="<%= source %>">
                        <div class="mb-3">
                            <label for="displayName" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="displayName" name="nombre" required>
                        </div>
                        <div class="mb-3">
                            <label for="signupEmail" class="form-label">Correo</label>
                            <input type="email" class="form-control" id="signupEmail" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>
                        </div>
                        <div class="mb-3">
                            <label for="signupPwdInput" class="form-label">Contraseña</label>
                            <input type="password" class="form-control" id="signupPwdInput" name="password" placeholder="************" required>
                            <div id="signupPwdValidation"></div>
                        </div>
                        <div class="mb-3">
                            <label for="signupPwdConfirm" class="form-label">Confirmación</label>
                            <input type="password" class="form-control" id="signupPwdConfirm" name="passwordConfirmation" placeholder="************" required>
                            <div id="signupPwdConfirmValidation"></div>
                        </div>
                        <div class="mt-3 text-center">
                            <button type="submit" class="btn btn-primary form-control">Continuar</button>
                        </div>
                    </div>
                </form>
                <div class="modal-footer">
                    <p>¿Ya tienes una cuenta? <a href="#" data-bs-target="#loginModal" data-bs-toggle="modal">Haz clic aquí</a></p>
                </div>
            </div>
        </div>
    </div>
    <% } %>

<script>
let passwordInput = document.getElementById('signupPwdInput');
let passwordValidation = document.getElementById('signupPwdValidation');
let passwordConfirmInput = document.getElementById('signupPwdConfirm');
let passwordConfirmValidation = document.getElementById('signupPwdConfirmValidation');

passwordInput.addEventListener('input', () => {
    let password = passwordInput.value;
    let passwordRegex = /^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{7,50}$/;

    if (passwordRegex.test(password)) {
        passwordInput.style.backgroundColor = '#c8ecc7';
        passwordValidation.textContent = 'Contraseña válida';
    } else {
        passwordInput.style.backgroundColor = '#f08080';
        passwordValidation.textContent = 'Tu contraseña debe tener al menos 7 caracteres, una letra y un número';
    }

    if (password === passwordConfirmInput.value) {
        passwordConfirmInput.style.backgroundColor = '#c8ecc7';
        passwordConfirmValidation.textContent = 'Passwords match';
    } else {
        passwordConfirmInput.style.backgroundColor = '#f08080';
        passwordConfirmValidation.textContent = 'Passwords do not match';
    }
});

passwordConfirmInput.addEventListener('input', () => {
    if (passwordInput.value === passwordConfirmInput.value) {
        passwordConfirmInput.style.backgroundColor = '#c8ecc7';
        passwordConfirmValidation.textContent = 'Contraseñas coinciden';
    } else {
        passwordConfirmInput.style.backgroundColor = '#f08080';
        passwordConfirmValidation.textContent = 'Contraseñas no coinciden';
    }
});
</script>
