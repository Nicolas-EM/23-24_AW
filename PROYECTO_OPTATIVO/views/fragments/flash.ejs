<!-- Toast notification -->
<% let message = getAndClearFlash();
    if(message) {%>
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="<%= toastId %>" class="toast" role="alert" aria-live="assertive" aria-atomic="true"></div>
            <div class="toast-header">
                <span class="material-symbols-outlined d-inline-block align-text-top">flight_takeoff</span>
                <strong class="me-auto">CheapBnB</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                <%= message %>
            </div>
        </div>
    </div>

    <script>
        const toast = document.getElementById('liveToast')
        const toastBootstrap = bootstrap.Toast.getOrCreateInstance(toast);
        toastBootstrap.show();
    </script>
<% } %>