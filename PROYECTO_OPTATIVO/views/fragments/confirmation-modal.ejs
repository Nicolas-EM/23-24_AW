<!-- sign up modal -->
<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="confirmationModalForm" method="post" action="/">
        <div class="modal-header">
          <h5 class="modal-title" id="confirmationModalLabel">Confirma tu acción.</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <input id="confirmAction" value="" class="d-none">
          <input id="confirmReservaId" type="number" class="d-none" value="" name="reservaId">
          <div id="deleteConfirm" class="mb-3">
            <label class="form-label">¿Seguro que quieres eliminar esta reseña?</label>
          </div>
          <div id="modifyConfirm" class="mb-3">
            <%- include('./reservaForm', {id: 0, price: 5, isAuthenticated}) %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-primary">Confirmar</button>
        </div>
      </form>
    </div>
  </div>
</div>