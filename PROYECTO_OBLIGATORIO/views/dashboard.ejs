<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('fragments/head.ejs') %>
    <title>RIU - Dashboard</title>
    <link href="/stylesheets/dashboard.css" rel="stylesheet" type="text/css">
</head>

<body>
    <%- include('fragments/navbar.ejs') %>
    <!-- Content -->
    <div id="content" class="m-2">
        <!-- Search -->
        <div class="container text-center">
            <!-- Search bar -->
            <form id="searchForm" action="/search" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="input-group justify-content-center">
                    <input type="text" class="form-control" id="query" name="query" placeholder="Search installations">
                    
                    <!-- Search -->
                    <div class="btn-group">
                        <!-- Search Btn -->
                        <button class="btn btn-primary ml-2" type="submit">
                            <span class="material-symbols-outlined">search</span>
                        </button>
                        <!-- Filter Button -->
                        <button class="btn btn-primary btn-rounded" type="button" data-bs-toggle="collapse" data-bs-target="#searchFilters" aria-expanded="false" aria-controls="searchFilters">
                            <span class="material-symbols-outlined">tune</span>
                        </button>
                    </div>
                </div>

                <!-- Search filters -->
                <div class="row row-cols-1 row-cols-md-2 g-2 mt-3 collapse" id="searchFilters">
                    <!-- TODO: change filters to faculty -->
                    <div class="col">
                        <label for="maxPrice" class="form-label">Precio Mínimo:</label>
                        <input id="minPrice" type="number" min="0" max="5000" value="0" class="form-control mx-auto" name="minPrice">
                    </div>
                    <div class="col">
                        <label for="maxPrice" class="form-label">Precio Máximo:</label>
                        <input id="maxPrice" type="number" min="0" max="5000" value="5000" class="form-control mx-auto" name="maxPrice">
                    </div>
                </div>
            </form>
        </div>

        <!-- Grid of installations -->
        <div class="installations container mt-4">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5 gx-4" id="installations">
            </div>
        </div>
    </div>

    <%- include('fragments/footer.ejs') %>
    <script src="/javascript/dashboard.js"></script>
</body>

</html>